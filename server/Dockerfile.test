# Test Dockerfile for ShareThings Server
FROM node:18-alpine

WORKDIR /app

# Set environment variables
ENV NODE_ENV=test

# Set default port
ARG PORT=3001
ENV PORT=${PORT}

# Copy package files and install all dependencies (including dev dependencies)
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Expose the port
EXPOSE ${PORT}

# Default command (can be overridden)
CMD ["npm", "test"]