# API Configuration
# You can use the following options for API_URL and SOCKET_URL:
# - Specific URL: http://example.com:3001 (for manual configuration)
# - 'auto': The application will automatically detect the hostname (recommended)
VITE_API_URL=auto
VITE_SOCKET_URL=auto

# API Port (used when auto-detecting the hostname with non-standard ports)
# This is only used if the current URL has a non-standard port and VITE_API_URL is set to 'auto'
VITE_API_PORT=3001

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_LOGGING=false

# Content Configuration
VITE_MAX_FILE_SIZE=104857600  # 100MB in bytes
VITE_DEFAULT_CHUNK_SIZE=65536  # 64KB in bytes